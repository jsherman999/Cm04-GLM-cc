# CM-04 Scanner Configuration
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME=CM-04 Scanner
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# SSH Settings
SSH_TIMEOUT=30
SSH_CONCURRENCY_LIMIT=100
SSH_USER=
SSH_KEY_FILE=~/.ssh/id_rsa

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./cm04_scanner.db
# For PostgreSQL use: postgresql+asyncpg://user:password@localhost/cm04_scanner
# For MySQL use: mysql+aiomysql://user:password@localhost/cm04_scanner

# Redis Settings (for caching and job queue)
REDIS_URL=redis://localhost:6379

# Security Settings
SECRET_KEY=change-this-in-production-use-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports

# Job Settings
JOB_TIMEOUT=3600  # 1 hour in seconds
MAX_CONCURRENT_JOBS=10

# QAS/VAS Settings
VASTOOL_PATH=/opt/quest/bin/vastool

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=./logs

# Performance Settings
CACHE_TTL=3600  # 1 hour in seconds
CONNECTION_POOL_SIZE=20
REQUEST_TIMEOUT=30

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true
ENABLE_WEBHOOKS=false

# External Integrations
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=